package com.jagannadh;

import java.util.Scanner;

public class SentenceOperations {
	public static int findVowelCount(String sentence) {
		int count = 0;
		for (int i = 0; i < sentence.length(); i++) {
			char ch = sentence.charAt(i);
			if (ch == 'A' || ch == 'a' || ch == 'E' || ch == 'e' || ch == 'I' || ch == 'i' || ch == 'O' || ch == 'o'
					|| ch == 'U' || ch == 'u')
				count = count + 1;
		}
		return count;
	}

	public static int findDigitsCount(String sentence) {
		int count = 0;
		for (int i = 0; i < sentence.charAt(i); i++) {
			char ch = sentence.charAt(i);
			if (ch >= 'A' && ch <= 'Z')
				count = count + 1;
		}
		return count;
	}

	public static int findDigitCount(String sentence) {
		int count = 0;
		for (int i = 0; i < sentence.length(); i++) {
			char ch = sentence.charAt(i);
			if (ch >= '0' && ch <= '9')
				count = count + 1;
		}
		return count;
	}

	public static void main(String[] args) {
		try (Scanner scan = new Scanner(System.in)) {
			System.out.println("Enter your Sentence : ");
			String line = scan.nextLine();
			System.out.println("Vowels Count in sentence :"+findVowelCount(line));
			System.out.println("UpperCase Letters  Count in sentence :"+findVowelCount(line));
			System.out.println("Digits Count in sentence :"+findVowelCount(line));
		}
		

	}
}
