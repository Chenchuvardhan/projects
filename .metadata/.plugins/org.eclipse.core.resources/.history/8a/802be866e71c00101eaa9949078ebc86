package com.jagannadh;

import java.util.Scanner;

public class SentenceOperations {
	public static int findVowelCount(String sentence) {

		int count = 0;
		for (int i = 0; i < sentence.length(); i++) {
			char ch = sentence.charAt(i);
			if (ch == 'A' || ch == 'a' || ch == 'E' || ch == 'e' || ch == 'I' || ch == 'i' || ch == 'O' || ch == 'o'
					|| ch == 'U' || ch == 'u')
				count = count + 1;
		}
		return count;

		return (int) sentence.chars().mapToObj(i -> (char) i).filter(i -> "aeiouAEIOU".indexOf(i) != -1).count();
	}

	public static int findUpperCaseLettersCount(String sentence) {
		/*
		 * int count = 0; for (int i = 0; i < sentence.length(); i++) { char ch =
		 * sentence.charAt(i); if (ch >= 'A' && ch <= 'Z') count = count + 1; } return
		 * count;
		 */
		return (int) sentence.chars().mapToObj(c -> (char) c).filter(c -> Character.isUpperCase(c)).count();
	}

	public static int findDigitCount(String sentence) {

		int count = 0;
		for (int i = 0; i < sentence.length(); i++) {
			char ch = sentence.charAt(i);
			if (ch >= '0' && ch <= '9')
				count = count + 1;
		}
		return count;

		// return
		// (int)sentence.chars().mapToObj(a->(char)a).filter(a->Character.isDigit(a)).count();
	}

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter your Sentence : ");
		String line = scan.nextLine();
		System.out.println("Vowels Count in sentence :" + findVowelCount(line));
		System.out.println("UpperCase Letters  Count in sentence :" + findUpperCaseLettersCount(line));
		System.out.println("Digits Count in sentence :" + findDigitCount(line));

	}
}
